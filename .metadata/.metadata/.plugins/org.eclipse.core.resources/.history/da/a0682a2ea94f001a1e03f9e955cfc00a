package supai;

public class Prob1 {

	public static void main(String[] args) {
		int n=5;
		for(int i=n;i>=1;i--)
		{
		   for(int j=1;j<=n-i;j++)
		   {
		       System.out.print(" ");
		   }
		   
		    for(int j=i;j>=1;j--)
		    {
		        if(i==1 && j==3)
		        {
		            System.out.print("B");
		        }
		        else{
		        System.out.print("*");
		    }
		    }
		    System.out.println();
		}

	}

}
